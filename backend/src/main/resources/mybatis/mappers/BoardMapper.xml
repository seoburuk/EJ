<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.Globalin.dao.BoardDao">

    <resultMap id="BoardResultMap" type="com.example.Globalin.model.Board">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="postCount" column="post_count"/>
        <result property="category" column="category"/>
        <result property="icon" column="icon"/>
    </resultMap>

    <select id="findAllBoards" resultMap="BoardResultMap">
        SELECT id, name, description, post_count, category, icon
        FROM boards
        ORDER BY id ASC
    </select>

    <select id="findById" resultMap="BoardResultMap">
        SELECT id, name, description, post_count, category, icon
        FROM boards
        WHERE id = #{id}
    </select>

</mapper>
