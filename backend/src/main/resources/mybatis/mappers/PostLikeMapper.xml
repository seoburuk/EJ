<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.Globalin.dao.PostLikeDao">

    <!-- Result Map -->
    <resultMap id="PostLikeResultMap" type="com.example.Globalin.model.PostLike">
        <id property="id" column="id"/>
        <result property="postId" column="post_id"/>
        <result property="userId" column="user_id"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- いいね追加 -->
    <insert id="insertLike" parameterType="com.example.Globalin.model.PostLike">
        INSERT INTO post_likes (post_id, user_id, created_at)
        VALUES (#{postId}, #{userId}, NOW())
    </insert>

    <!-- いいねキャンセル -->
    <delete id="deleteLike">
        DELETE FROM post_likes
        WHERE post_id = #{postId} AND user_id = #{userId}
    </delete>

    <!-- 特定投稿のいいね数取得 -->
    <select id="countByPostId" resultType="int">
        SELECT COUNT(*) FROM post_likes WHERE post_id = #{postId}
    </select>

    <!-- ユーザーが特定投稿にいいねを押したか確認 -->
    <select id="existsByPostIdAndUserId" resultType="int">
        SELECT COUNT(*) FROM post_likes
        WHERE post_id = #{postId} AND user_id = #{userId}
    </select>

    <!-- ユーザーがいいねした投稿IDリスト取得 -->
    <select id="findLikedPostIdsByUserId" resultType="long">
        SELECT post_id FROM post_likes
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

</mapper>
